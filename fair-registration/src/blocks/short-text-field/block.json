{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fair-registration/short-text-field",
	"version": "1.0.0",
	"title": "Short Text Field",
	"category": "widgets",
	"icon": "editor-textcolor",
	"description": "Short text input field for registration forms",
	"keywords": ["text", "field", "input", "registration"],
	"textdomain": "fair-registration",
	"parent": ["fair-registration/form"],
	"supports": {
		"html": false,
		"reusable": false
	},
	"attributes": {
		"label": {
			"type": "string",
			"default": "Text Field"
		},
		"placeholder": {
			"type": "string",
			"default": "Enter text"
		},
		"required": {
			"type": "boolean",
			"default": false
		},
		"fieldId": {
			"type": "string",
			"default": ""
		},
		"maxLength": {
			"type": "number",
			"default": 255
		}
	},
	"usesContext": ["fair-registration/formId"],
	"editorScript": "file:./editor.js",
	"render": "file:./render.php"
}
