{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fair-registration/form",
	"version": "1.0.0",
	"title": "Registration Form",
	"category": "widgets",
	"icon": "clipboard",
	"description": "A form block for user registration with customizable fields",
	"keywords": ["registration", "form", "signup", "fair"],
	"textdomain": "fair-registration",
	"supports": {
		"html": false,
		"layout": {
			"default": {
				"type": "flex",
				"orientation": "vertical"
			},
			"allowSwitching": false,
			"allowInheriting": false,
			"allowJustification": true,
			"allowVerticalAlignment": true,
			"allowOrientation": false
		},
		"align": ["wide", "full"],
		"spacing": {
			"padding": true,
			"margin": ["top", "bottom"]
		}
	},
	"attributes": {
		"name": {
			"type": "string",
			"default": ""
		},
		"id": {
			"type": "string",
			"default": ""
		}
	},
	"providesContext": {
		"fair-registration/formId": "id",
		"fair-registration/formName": "name"
	},
	"usesContext": [],
	"allowedBlocks": [
		"fair-registration/email-field",
		"fair-registration/short-text-field",
		"fair-registration/long-text-field",
		"fair-registration/phone-number-field",
		"fair-registration/checkbox-field",
		"fair-registration/select-field",
		"core/button",
		"core/buttons",
		"core/paragraph",
		"core/heading"
	],
	"editorScript": "file:./editor.js",
	"viewScript": "file:./frontend.js",
	"render": "file:./render.php",
	"viewStyle": "file:./style.css",
	"editorStyle": "file:./editor.css"
}
