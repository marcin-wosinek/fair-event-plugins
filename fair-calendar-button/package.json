{
	"name": "fair-calendar-button",
	"version": "1.3.1",
	"description": "A Gutenberg block for calendar integration",
	"license": "GPL-3.0-or-later",
	"author": "Marcin Wosinek",
	"type": "module",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build; npm run makejson",
		"clean": "rm -rf build",
		"prebuild": "npm run clean",
		"start": "wp-scripts start",
		"composer:install": "composer install",
		"composer:update": "composer update",
		"format": "wp-scripts format",
		"makepot": "wp i18n make-pot . languages/fair-calendar-button.pot --exclude=node_modules,vendor,tests,svn",
		"makejson": "wp i18n make-json languages ./build/languages --pretty-print --no-purge",
		"makemo": "wp i18n make-mo languages/",
		"updatepo": "wp i18n update-po languages/fair-calendar-button.pot languages/",
		"test": "jest",
		"test:screenshots": "playwright test",
		"screenshots": "playwright test --headed"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^7.0.0",
		"@fortawesome/free-brands-svg-icons": "^7.0.0",
		"@fortawesome/free-solid-svg-icons": "^7.0.0",
		"@wordpress/block-editor": "^15.2.0",
		"@wordpress/blocks": "^15.2.0",
		"@wordpress/components": "^30.2.0",
		"@wordpress/i18n": "^6.2.0",
		"calendar-link": "^2.11.0",
		"date-fns": "^4.1.0"
	},
	"devDependencies": {
		"@babel/core": "^7.28.3",
		"@babel/preset-env": "^7.28.3",
		"@playwright/test": "^1.40.0",
		"@wordpress/scripts": "^30.20.0",
		"babel-jest": "^30.0.5",
		"dotenv": "^16.3.1",
		"jest": "^30.0.0"
	}
}
