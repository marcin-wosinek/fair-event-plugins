{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fair-payment/simple-payment",
	"version": "0.1.0",
	"title": "Simple Payment",
	"category": "widgets",
	"icon": "money-alt",
	"description": "Simple payment block for WordPress",
	"textdomain": "fair-payment",
	"editorScript": "file:./index.js",
	"render": "file:./render.php",
	"attributes": {
		"amount": {
			"type": "string",
			"default": "10"
		},
		"currency": {
			"type": "string",
			"default": "EUR"
		}
	}
}
