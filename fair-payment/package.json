{
	"name": "fair-payment",
	"version": "0.1.0",
	"description": "Simple payment block for WordPress",
	"main": "build/index.js",
	"scripts": {
		"composer:install": "composer install",
		"composer:install:prod": "composer install --no-dev",
		"composer:update": "composer update",
		"composer:validate": "composer validate --strict",
		"prebuild": "npm run clean",
		"build": "webpack --mode=production --config webpack.config.cjs",
		"clean": "rm -rf build",
		"start": "webpack --mode=development --watch --config webpack.config.cjs",
		"format": "wp-scripts format",
		"test": "npm-run-all test:js",
		"test:js": "jest",
		"test:php": "vendor/bin/phpunit"
	},
	"keywords": [
		"wordpress",
		"gutenberg",
		"block",
		"payment"
	],
