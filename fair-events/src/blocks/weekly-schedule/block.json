{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "fair-events/weekly-schedule",
	"version": "0.1.0",
	"title": "Weekly Schedule",
	"category": "widgets",
	"icon": "calendar-alt",
	"description": "Display events in a 7-day weekly schedule view.",
	"keywords": [ "events", "schedule", "week", "weekly", "calendar" ],
	"textdomain": "fair-events",
	"attributes": {
		"currentWeek": {
			"type": "string",
			"default": ""
		},
		"currentYear": {
			"type": "string",
			"default": ""
		},
		"categories": {
			"type": "array",
			"default": [],
			"items": {
				"type": "number"
			}
		},
		"displayPattern": {
			"type": "string",
			"default": "fair-events/schedule-event-simple"
		},
		"startOfWeek": {
			"type": "number",
			"default": 1,
			"enum": [ 0, 1 ]
		},
		"showNavigation": {
			"type": "boolean",
			"default": true
		},
		"showDrafts": {
			"type": "boolean",
			"default": false
		},
		"backgroundColor": {
			"type": "string",
			"default": "primary"
		},
		"textColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"eventSources": {
			"type": "array",
			"default": [],
			"items": {
				"type": "string"
			}
		}
	},
	"supports": {
		"html": false,
		"anchor": true,
		"align": [ "wide", "full" ]
	},
	"editorScript": "file:./editor.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style-editor.css",
	"render": "file:./render.php"
}
